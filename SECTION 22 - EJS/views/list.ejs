<!-- include header. -->
<%- include('header'); -%>

    <div class="box" id="heading">
        <!-- Tag for render data from the back-end -->
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
        <!-- For loop to render the newListItem that is an array in the back-end -->
        <!-- the tag <% %> is used to write some js code. -->
        <% for(var i=0; i<newListItem.length; i++){ %>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%= newListItem[i] %>
                </p>
            </div>
            <% } %>

                <form class="item" action="/" method="POST">
                    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                    <button type="submit" name="list" value="<%= listTitle %>">+</button>
                </form>
    </div>
    <%- include('footer'); -%>